<div class="container">
	<p>
	  <strong>User:</strong>
	  <%= @review.user %>
	</p>

	<p>
	  <strong>Title:</strong>
	  <%= @review.title %>
	</p>

	<p>
	  <strong>Content:</strong>
	  <%= @review.content %>
	</p>

	<% if @review.user == current_user %>
